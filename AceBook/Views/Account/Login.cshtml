@{
    ViewData["Title"] = "Login";
}

@section Styles {
    <link rel="stylesheet" href="~/css/login.css" />
}

    <div class="col-md-8 offset-md-2">
        <div class="container">
            <div class="row">
                <form class="col-12 col-md-6 p-3" action="LoginUser" method='post'>
                    <h3 class='p-4 text-center'>Login</h3>
                    <div class="form-group row">
                        <label class="col-4" for='email'>Email:</label>
                        <input class="form-control col-8" id="email" name='email' type='text' required>
                    </div>
                    <div class="form-group row">
                        <label class="col-4" for='password'>Password:</label>
                        <input class="form-control col-8" id="password" name='password' type='password' required>
                    </div>
                    <div class="form-group d-flex mt-5 justify-content-center">
                        <button class="btn btn-primary pl-3 pr-3" id="submit" type="submit">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>